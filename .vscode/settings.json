{   
    "editor.formatOnSave": true,
    "python.pythonPath": "apps/venv/bin/python3.9",
    "python.sortImports.args": [
        "--profile=black",
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=79"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },

